<div class="row">
	<div class="col-xs-4 col-xs-offset-4">

		<h1 class="center">Hacker News Job Listings</h1>

		<% unless @jobs.count == 0 %>
			<h1 class="center">Showing <%= pluralize( @jobs.count, 'result') %> for '<%= params[:search] %>'</h1>
		<% end %>

		<%= form_tag jobs_path, method: :get, :class => 'form-inline center job-form' do %>
			<div class="form-group">
				<%= text_field_tag :search, params[:search], :class => 'form-control center' %>
			</div>
			<%= submit_tag "Search", :class => 'btn btn-primary' %>
		<% end %>
	</div>

	<div class="row">
		<div class="col-xs-12 col-xs-offset-3">

			<% if @jobs.any? %>
				<%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
			<% end %>

		</div>
	</div>

	<div class="col-xs-6 col-xs-offset-3">

		<ul>
			<% @jobs.each do |job| %>
				<p><%= job.content %></p>
				<em>Added <%= time_ago_in_words(job.created_at) %> ago</em><br>
				<%= link_to "Delete", job_path(job), data: { confirm: 'Are you sure?' }, method: :delete %><br>
				<%= link_to "Job page", job_path(job) %><br><br>
			<% end %>

		</ul>

		<% if @jobs.any? %>
			<%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
		<% end %>
	</div>

</div>